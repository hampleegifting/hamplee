        let filteredProducts = [...products];

        // Image slider functionality
        let imageSliderIntervals = [];

        function initializeImageSliders() {
            // Clear existing intervals
            imageSliderIntervals.forEach(interval => clearInterval(interval));
            imageSliderIntervals = [];
            
            const sliders = document.querySelectorAll('.product-image-slider');
            
            sliders.forEach(slider => {
                const totalSlides = parseInt(slider.dataset.totalSlides);
                
                if (totalSlides > 1) {
                    // Start auto-slide for this product
                    const interval = setInterval(() => {
                        const currentSlide = parseInt(slider.dataset.currentSlide);
                        const nextSlide = (currentSlide + 1) % totalSlides;
                        
                        // Hide current slide
                        const slides = slider.querySelectorAll('.product-image-slide');
                        slides[currentSlide].classList.remove('active');
                        slides[nextSlide].classList.add('active');
                        
                        slider.dataset.currentSlide = nextSlide;
                    }, 3000); // Change image every 3 seconds
                    
                    imageSliderIntervals.push(interval);
                }
            });
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            renderProducts();
            updateResultsCount();
        });

        function renderProducts() {
            const grid = document.getElementById('productsGrid');
            const emptyState = document.getElementById('emptyState');
            
            if (filteredProducts.length === 0) {
                grid.style.display = 'none';
                emptyState.style.display = 'block';
                return;
            }
            
            grid.style.display = 'grid';
            emptyState.style.display = 'none';
            
            grid.innerHTML = filteredProducts.map((product, index) => {
                const imagesList = product.images || [product.image];
                const imagesHTML = imagesList.map((img, imgIndex) => `
                    <div class="product-image-slide ${imgIndex === 0 ? 'active' : ''}" data-slide="${imgIndex}">
                        <img src="${img}" alt="${product.name}">
                    </div>
                `).join('');
                
                return `
                <div class="product-card" data-product-index="${index}">
                    <div class="product-image">
                        <div class="product-image-slider" data-current-slide="0" data-total-slides="${imagesList.length}">
                            ${imagesHTML}
                        </div>
                        ${product.badge ? `<div class="product-badge">${product.badge}</div>` : ''}
                    </div>
                    <div class="product-info">
                        <div class="product-category">${product.category}</div>
                        <h3 class="product-name">${product.name}</h3>
                        <p class="product-description">${product.description}</p>
                        <div class="product-tags">
                            ${product.tags.map(tag => `<span class="product-tag">${tag}</span>`).join('')}
                        </div>
                        <div class="product-footer">
                            <div class="product-price">‚Çπ${product.price.toLocaleString()}</div>
                            <a href="#" class="product-cta">View Details ‚Üí</a>
                        </div>
                    </div>
                </div>
            `}).join('');
            
            // Initialize image sliders
            initializeImageSliders();
        }

        function applyFilters() {
            const activeFilters = getActiveFilters();
            
            filteredProducts = products.filter(product => {
                return Object.keys(activeFilters).every(filterType => {
                    if (activeFilters[filterType].length === 0) return true;
                    
                    return activeFilters[filterType].some(filterValue => {
                        return product.filters[filterType].includes(filterValue);
                    });
                });
            });
            
            renderProducts();
            updateResultsCount();
            updateActiveFiltersTags();
        }

        function getActiveFilters() {
            const filters = {
                category: [],
                occasion: [],
                budget: [],
                contents: [],
                sustainability: [],
                mood: []
            };
            
            document.querySelectorAll('.filter-option input[type="checkbox"]:checked').forEach(checkbox => {
                const value = checkbox.value;
                
                // Determine filter type based on checkbox id
                if (checkbox.id.startsWith('cat-')) filters.category.push(value);
                else if (checkbox.id.startsWith('occ-')) filters.occasion.push(value);
                else if (checkbox.id.startsWith('budget-')) filters.budget.push(value);
                else if (checkbox.id.startsWith('content-')) filters.contents.push(value);
                else if (checkbox.id.startsWith('sus-')) filters.sustainability.push(value);
                else if (checkbox.id.startsWith('mood-')) filters.mood.push(value);
            });
            
            return filters;
        }

        function updateResultsCount() {
            const count = filteredProducts.length;
            const total = products.length;
            document.getElementById('resultsCount').textContent = 
                count === total ? `Showing all ${total} products` : `Showing ${count} of ${total} products`;
        }

        function updateActiveFiltersTags() {
            const container = document.getElementById('activeFilters');
            const activeCheckboxes = document.querySelectorAll('.filter-option input[type="checkbox"]:checked');
            
            if (activeCheckboxes.length === 0) {
                container.innerHTML = '';
                return;
            }
            
            container.innerHTML = Array.from(activeCheckboxes).map(checkbox => {
                const label = checkbox.nextElementSibling.textContent;
                return `
                    <div class="filter-tag" onclick="removeFilter('${checkbox.id}')">
                        <span>${label}</span>
                        <span class="remove">√ó</span>
                    </div>
                `;
            }).join('');
        }

        function removeFilter(checkboxId) {
            document.getElementById(checkboxId).checked = false;
            applyFilters();
        }

        function clearAllFilters() {
            document.querySelectorAll('.filter-option input[type="checkbox"]').forEach(checkbox => {
                checkbox.checked = false;
            });
            filteredProducts = [...products];
            renderProducts();
            updateResultsCount();
            updateActiveFiltersTags();
        }

        function sortProducts() {
            const sortValue = document.getElementById('sortSelect').value;
            
            switch(sortValue) {
                case 'price-low':
                    filteredProducts.sort((a, b) => a.price - b.price);
                    break;
                case 'price-high':
                    filteredProducts.sort((a, b) => b.price - a.price);
                    break;
                case 'name':
                    filteredProducts.sort((a, b) => a.name.localeCompare(b.name));
                    break;
                default:
                    // Featured - use original order
                    applyFilters();
                    return;
            }
            
            renderProducts();
        }

        function toggleFilterGroup(element) {
            element.classList.toggle('collapsed');
            const options = element.nextElementSibling;
            options.classList.toggle('collapsed');
        }

        function toggleMobileFilters() {
            document.getElementById('filterSidebar').classList.toggle('active');
            document.getElementById('filterOverlay').classList.toggle('active');
        }
    </script>
